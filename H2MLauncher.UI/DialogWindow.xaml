<Window x:Class="H2MLauncher.UI.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H2MLauncher.UI" 
        xmlns:dialog="clr-namespace:H2MLauncher.UI.Dialog" 
        xmlns:dialogviews="clr-namespace:H2MLauncher.UI.Dialog.Views" 
        d:DataContext="{d:DesignInstance Type=dialog:DialogViewModel}"
        mc:Ignorable="d" ShowInTaskbar="False"
        Title="DialogWindow" 
        MaxHeight="150" MaxWidth="300"
        MinHeight="150" MinWidth="300"
        Height="150" Width="300"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded" WindowStyle="None"
        DataContext="{DynamicResource DialogViewModel}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type dialog:TextDialogViewModel}">
            <dialogviews:TextDialogView/>
        </DataTemplate>
    </Window.Resources>
    <ContentPresenter x:Name="ContentPresenter" Content="{Binding ActiveDialogViewModel, UpdateSourceTrigger=PropertyChanged}"/>
</Window>
