<Window x:Class="H2MLauncher.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H2MLauncher.UI"
        xmlns:vm="clr-namespace:H2MLauncher.Core.ViewModels;assembly=H2MLauncher.Core" 
        xmlns:models="clr-namespace:H2MLauncher.Core.Models;assembly=H2MLauncher.Core" 
        xmlns:dialog="clr-namespace:H2MLauncher.UI.Dialog" 
        d:DataContext="{d:DesignInstance Type=vm:ServerBrowserViewModel}"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown"
        Icon="Assets/icon.ico"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="MainWindow" Height="450" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding CheckUpdateStatusCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Left" />
            <Setter Property="TextBlock.Background" Value="Transparent" />
            <Setter Property="TextBlock.Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />

            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="#1e90ff" />
                    <Setter Property="BorderThickness" Value="1" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <local:HostNameColorConverter x:Key="hostNameColorConverter" />
    </Window.Resources>
    <Border CornerRadius="16" Padding="10">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/H2MLauncher.UI;component/Assets/Background.jpg" Opacity="1"/>
        </Border.Background>
        <StackPanel Width="790">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="H2M Launcher" FontSize="30" FontWeight="Bold" Foreground="White" Padding="5,0,0,0"/>
                <TextBlock Grid.Column="1" Text="{Binding UpdateStatus}" Foreground="White" FontSize="20" HorizontalAlignment="Right"  FontWeight="Bold" Padding="5" />
            </Grid>
            <Grid Width="790" Margin="5,0,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Label Content="Total Players:" Foreground="White" HorizontalAlignment="Left" Margin="-5,0,0,0" />
                    <Label Content="{Binding TotalPlayers}" Foreground="White" />
                    <Label Content="Total Servers:" Foreground="White"/>
                    <Label Content="{Binding TotalServers}" Foreground="White" />
                    <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBox_TextChanged" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Content="Join" Width="80" Command="{Binding JoinServerCommand}"/>
                    <Separator Opacity="0" Width="5"/>
                    <Button Content="Refresh" Width="80" Command="{Binding RefreshServersCommand}"/>
                    <Separator Opacity="0" Width="5"/>
                    <Button Content="Launch H2M" Width="80" Command="{Binding LaunchH2MCommand}"/>
                    <Separator Opacity="0" Width="15"/>
                </StackPanel>
            </Grid>
            <DataGrid x:Name="serverDataGrid" ItemsSource="{Binding Servers}" Margin="5" MinHeight="360" MaxHeight="360" Width="780" 
                CanUserReorderColumns="False" 
                CanUserAddRows="False" 
                CanUserDeleteRows="False" 
                CanUserSortColumns="True" 
                IsReadOnly="True"
                AutoGenerateColumns="False"
                GridLinesVisibility="None" 
                HorizontalScrollBarVisibility="Hidden"
                Background="Black"
                SelectionMode="Single"
                CanUserResizeColumns="False"
                Opacity="0.8"
                HeadersVisibility="Column"
                VerticalScrollBarVisibility="Hidden"
                SelectedItem="{Binding SelectedServer, UpdateSourceTrigger=PropertyChanged}"
                RowBackground="Transparent">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="555">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Hostname"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="vm:ServerViewModel">
                                <ItemsControl IsHitTestVisible="False" ItemsSource="{Binding HostName, Converter={StaticResource hostNameColorConverter}}" FlowDirection="LeftToRight">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Map" Binding="{Binding Map}" />
                    <DataGridTextColumn Header="Mode" Binding="{Binding GameType}"/>
                    <DataGridTextColumn Header="Players" Binding="{Binding Occupation}"/>
                    <DataGridTextColumn Header="Ping" Binding="{Binding Ping}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Border>
</Window>
